<form action="/record" method="post">
  <div class="form-group font-weight-bold" style="margin: 3rem;">
    <div class="row" style="padding: 1rem;">
      <div class="col-md-2 offset-md-2">*必要欄位</div>
      <div class="col-md-4 d-flex justify-content-center align-items-center" >請輸入你的支出</div>
    </div>

    <div class="row" style="padding: 2rem;">
      <div class="col-md-2 offset-md-2 d-flex justify-content-center align-items-center">
        <label for="name">名稱*:</label>
      </div>
      <div class="col-md-4 d-flex justify-content-center align-items-center" >
        <input class="form-control" type="text" name="name" required>
      </div>
    </div>

    <div class="row" style="padding: 2rem;">
      <div class="col-md-2 offset-md-2 d-flex justify-content-center align-items-center">
        <label for="date">日期*:</label>
      </div>
      <div class="col-md-4 text-center" >
        <input class="form-control" type="date" name="date" required>
      </div>
    </div>

    <div class="row" style="padding: 2rem;">
      <div class="col-md-2 offset-md-2 d-flex justify-content-center align-items-center">
        <label for="category">類別*:</label>
      </div>
      <div class="col-md-4 text-center" >
        <select class="form-control" name="category" required>
          <option value="">請選擇類別</option>
          {{#each categories}}
          <option value="{{this.name}}">{{this.name}}</option>
          {{/each}}
        </select>
      </div>
    </div>

    <div class="row" style="padding: 2rem;">
      <div class="col-md-2 offset-md-2 d-flex justify-content-center align-items-center">
        <label for="amount">金額*:</label>
      </div>
      <div class="col-md-4 text-center" >
        <input class="form-control" type="Number" name="amount" required>
        </div>
      </div>
    </div>

    <div class="row col-md-4 offset-md-4 d-flex justify-content-center align-items-center" style="padding: 0.5rem;">
      <button class="btn btn-primary" type="submit">新增支出</button>
    </div>
  </div>
</form>